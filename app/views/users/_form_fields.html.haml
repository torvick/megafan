  %strong#error-last_name.error-msg
    = f.text_field :last_name, class: 'form-input', required: true,id:"last_name",value: @user.last_name
    %label.form-label{for: "last_name"}= t('general.last_name')
    %p#text-last_name.hide= t('errors.last_name')

