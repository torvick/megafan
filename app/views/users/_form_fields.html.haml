%div.form-group-select.col-4
  %div.form-group
    = f.select :role_id, options_for_select(Role.all.map {|role| [role.name, role.id] },selected: @user.role_id),{ include_blank: "" },{class: 'form-select', required: true}
    %label.form-label{for: "role"}= t('general.role')
